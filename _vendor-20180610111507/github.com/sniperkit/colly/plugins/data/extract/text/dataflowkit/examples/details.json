{  
    "name":"drones_collection",
    "request":{  
       "url":"https://drony.heureka.sk"
    },
    "fields":[   
       {  
          "name":"Title",
          "selector":".product-container a",
          "extractor":{  
             "types":[
                 "href",
                 "text"
                ],
             "filters":[  
                "trim",
                "lowerCase"
             ],
             "params":{  
                "includeIfEmpty":false
             }
          },
          "details":{  
             "fields":[  
                {  
                   "name":"Title",
                   "selector":"h1",
                   "extractor":{  
                      "types":["text"],
                      "filters":[  
                         "trim",
                         "upperCase"
                      ],                   
                      "params":{  
                         "includeIfEmpty":true                  
                      }
                   }
                },
                {  
                   "name":"Price",
                   "selector":".js-top-price",
                   "extractor":{  
                      "types":["text"]
                   }
                }
             ]
          }
       },
       {  
          "name":"Image",
          "selector":"#product-container img",
          "extractor":{  
             "types":["alt","src","width","height"],
             "filters":[  
                "trim",
                "UpPerCaSe"
             ]
          }
       },
       {  
          "name":"Buyinfo",
          "selector":".buy-info",
          "extractor":{  
             "types":["text","unknown"],
             "filters":[  
                "trim",
                "capitalize"
             ],
             "params":{  
                "includeIfEmpty":false
             }
          }
       }
    ],
    "paginator":{  
       "selector":".next",
       "attr":"href",
       "maxPages":1
    },
    "format":"json",
    "paginatedResults":false,
    "fetchDelay": 0
 }